<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.UpdateRecipeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageView
            android:id="@+id/iv_foodImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/index" />

        <EditText
            android:id="@+id/txtRecipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Recipe Name"
            android:textColorHint="#6A7581"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Description"
            android:textColorHint="#6A7581"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/txtIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Ingredients"
            android:textColorHint="#6A7581"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/txtDirections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Directions"
            android:textColorHint="#6A7581"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/txtDifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Difficulty (Easy, Medium, Hard)"
            android:textColorHint="#6A7581"
            android:textSize="19sp" />

        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:backgroundTint="#86CF8C"
            android:background="@drawable/rounded_button"
            android:text="Select Image"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

        <Button
            android:id="@+id/updateRecipeButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:backgroundTint="#86CF8C"
            android:background="@drawable/rounded_button"
            android:text="Update Recipe"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

</ScrollView>